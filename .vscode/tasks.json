{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Verilog Lint (iverilog)",
            "type": "shell",
            "command": "iverilog",
            "args": [
                "-g2012",                // 支持 Verilog-2012
                "-t null",               // 只检查语法，不生成目标文件
                "${file}"                // 当前打开的文件
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"       // 不在终端显示输出
            },
            "problemMatcher": {
                "owner": "verilog",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*?):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}